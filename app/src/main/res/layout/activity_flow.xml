<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FlowActivity">

    <LinearLayout
        android:id="@+id/LinearLayoutET1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="16dp"
        android:paddingRight="10dp">

        <EditText
            android:id="@+id/LoginET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="login"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/PwdET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:hint="password"
            android:inputType="textPersonName"
            android:minHeight="48dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutBtn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="16dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/ChangeDataBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Change data" />

        <Button
            android:id="@+id/ExitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:text="Exit" />
    </LinearLayout>


    <TextView
        android:id="@+id/BalanceTW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Balance"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/LinearLayoutET2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/CategoryET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Category"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/MoneyET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="99999"
            android:layout_marginTop="12dp"
            android:inputType="numberDecimal"
            android:minHeight="48dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutBtn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="16dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/TopUpBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="999999"
            android:text="Top up" />

        <Button
            android:id="@+id/WithdrawBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="18dp"
            android:text="Withdraw" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutCharts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="horizontal">

        <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/TopUpPieChart"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"/>


        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/WithdrawPieChart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_marginStart="12dp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>